[Unit]
Description=DNSProxy - A fast DNS proxy with DoH/DoQ support
After=network.target

[Service]
ExecStart=/usr/local/bin/dnsproxy --listen 0.0.0.0 --listen :: --port 5353 --bootstrap 8.8.8.8 --bootstrap 2606:4700:4700::1111 --fallback 9.9.9.9 --fallback 2620:fe::9 --upstream https://dns.adguard.com/dns-query --upstream quic://dns.adguard.com --upstream [/www.googleadservices.com/]8.8.8.8 --upstream [/ad.doubleclick.net/]8.8.8.8 --ratelimit 500 --cache --cache-optimistic --cache-size 2097152 --output /dev/null
Restart=always

[Install]
WantedBy=multi-user.target
